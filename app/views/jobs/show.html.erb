<p id="notice"><%= notice %></p>


<p>
  <strong>Job ID:</strong>
  <%= @job.id %>
</p>
<p>
  <strong>Job title:</strong>
  <%= @job.job_title %>
</p>

<p>
  <strong>Experience In Years:</strong>
  <%= @job.experience %>
</p>

<p>
  <strong>Salary:</strong>
  <%= @job.salary %>
</p>

<p>
  <strong>Description:</strong>
  <%= @job.description %>
</p>


<% if user_signed_in?%>
  <% if current_user.user_role.include?"Employer" or current_user.admin?%>
<%= link_to 'Edit', edit_job_path(@job) %> 
<%= link_to 'Show All Jobs', jobs_path %>
<%else%>
<%= link_to 'Back', root_path %>
<%= link_to 'Apply Now', apply_job_path(@job)%>

<%end%>
<%end%>
<% if user_signed_in?%>
  <% if current_user.user_role.include?"Employer"%>
    <table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Email</th>
      <th>Mobile No.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_apply.each do |user_apply| %>
      <tr>
        <td><%= user_apply.first_name %></td>
        <td><%= user_apply.email %></td>
        <td><%= user_apply.mobile_no %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<%end%>