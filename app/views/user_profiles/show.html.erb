 <table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Email</th>
      <th>Mobile No.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
   
        <td><%= @user.first_name %></td>
        <td><%= @user.email %></td>
        <td><%= @user.mobile_no %></td>
      
      </tr>
  
  </tbody>
</table>




<%if user_signed_in? && (current_user.user_role.include?'Job Seeker') &&(current_user.admin == false) %>
<h1> Applied Jobs</h1>
<%= paginate @jobs_user %>
<table>
   <thead>
      <tr>
         <th>Job title</th>
         <th>Experience</th>
         <th>Salary</th>
         <th colspan="3"></th>
      </tr>
   </thead>
   <tbody>
      <% @jobs_user.each do |job| %>
      <tr>
         <td><%= job.job_title %></td>
         <td><%= job.experience %></td>
         <td><%= job.salary %></td>
         <td><%= job.user_id %></td>
         <td><%= link_to 'Show', job %></td>
      </tr>
      <% end %>
   </tbody>
</table>
<%= paginate @jobs_user %>
<%end%>