          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "View Profile", user_profile_path(id:current_user.id),class:"dropdown-item" %>
               <%= link_to "Edit Profile", edit_user_registration_path,class:"dropdown-item" %>
             
          </ul>
