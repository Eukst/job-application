    <span class="visually-hidden">Next</span>
  </button>
</div>
<% end%>

<%if user_signed_in?%>

  <% if current_user.admin? %>
    <h1> Welcome Admin </h1>
   <%= render partial:"static_pages/adminview" %>
  <%else%>
    <%if current_user.user_role.include?"Job Seeker"%>
      <%= render partial:"static_pages/jobseekerview", :locals => {:jobs => @jobs,:jobs_paginate_jobseeker => @jobs_paginate_jobseeker} %>
    <% end%>
    <%if current_user.user_role.include?"Employer" %> 
      <h1> Welcome Employer</h1>
      <%= link_to "Create New Job ", new_job_path %>
      <%= render partial:"static_pages/employerview" %>
    <% end%>
  <%end%>
<%end%>


